<a class="card" href="#">
  <i class="fa fa-pencil edit-card-title"></i>
  {{#if labels}}
    <ul class="labels">
    {{#each labels}}
      <li class="{{color}}"></li>
    {{/each}}
    </ul>
  {{/if}}
  <p>{{card.title}}</p>
  <div class="badges">
  {{#if card.subscribed}}
    <div class="badge badge-subscribed">
      <i class="fa fa-eye"></i>
    </div>
  {{/if}}
  {{#if card.due}}
    <div class="badge badge-due">
      <i class="fa fa-clock-o"></i>
      <span> {{format_date card.due}}</span>
    </div>
  {{/if}}
  {{#if card.description}}
    <div class="badge badge-description">
      <i class="fa fa-align-justify"></i>
    </div>
  {{/if}}
  {{#if card.comments}}
    <div class="badge badge-comments">
      <i class="fa fa-comment-o"></i>
      <span> {{card.comments.length}}</span>
    </div>
  {{/if}}
  </div>
</a>